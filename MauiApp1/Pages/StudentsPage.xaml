<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:MauiApp1.Model"
             x:Class="MauiApp1.Pages.StudentsPage"
             x:Name="testPage"
             Title="StudentsPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button 
            x:Name="buttonExample"
            Text="Go to Add Students Page"
            Clicked="Button_Clicked"
            />
        <Button 
            Text="{Binding Path=TestStudent.Name, 
            Source={x:Reference testPage}}"></Button>
        <ListView x:Name="studentsList" RowHeight="60" BackgroundColor="Black" SeparatorColor="Green" ItemSelected="studentsList_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:Student">
                    <!-- <TextCell Text="{Binding Name}" Detail="{Binding Surname}" TextColor="White"></TextCell> -->
                    <ViewCell>
                        <HorizontalStackLayout>
                            <Entry Text="{Binding Name}" TextChanged="Entry_TextChanged" TextColor="White"></Entry>
                            <Label TextColor="White" FontSize="25">
                                <Label.Text>
                                    <MultiBinding StringFormat="{}{0}">
                                        <Binding Path="Name"></Binding>
                                        <Binding Path="Surname"></Binding>
                                    </MultiBinding>
                                </Label.Text>
                            </Label>
                        </HorizontalStackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>